def multiply_two_nums_without_operator(x, y):
    if y < 0:
        return -multiply_two_nums_without_operator(x, -y)
    elif y == 0:
        return 0
    elif y == 1:
        return x
    else:
        return x + multiply_two_nums_without_operator(x, y - 1)

print(multiply_two_nums_without_operator(3, 5));
print(multiply_two_nums_without_operator(-3, 5));
print(multiply_two_nums_without_operator(3, -5));
print(multiply_two_nums_without_operator(-3, -5));
